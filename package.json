{
  "name": "preon",
  "version": "1.0.0",
  "description": "Preon BPT oracle monorepo",
  "main": "hardhat.config.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "npm run clean && npm run compile",
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "test": "npm run build && npx hardhat test",
    "testWithCoverage": "npm run build && npx hardhat test --coverage",
    "coverage": "npx hardhat coverage && npx yarn build",
    "slither": "npm run build && slither .",
    "lint": "tslint -p tsconfig.json",
    "lint-fix": "tslint --fix -p tsconfig.json",
    "prettier": "npx prettier '**/*.{json,sol,md}' --check",
    "fix-all": "npm run solhint-fix && npm run prettier-fix && npm run lint-fix",
    "size": "hardhat size-contracts",
    "generate_uml": "sol2uml ./contracts",
    "generate_docs": "yarn run hardhat docgen --theme markdown"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PreonMoney/balancer-bpt-oracle.git"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "polygon",
    "bsc",
    "smart",
    "contracts"
  ],
  "author": "Preon team <simsala@sphere.finance>",
  "license": "MIT",
  "homepage": "https://preon.money/",
  "dependencies": {
    "@hardhat-docgen/core": "^1.2.3",
